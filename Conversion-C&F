<h2 id=title>CONVERSION</h2>
Enter a temperature value
<input type=number id=temperature>
&emsp; <br/> 

<input type="radio" name="unit" value="celcius" onclick="conversion('c');"> Celcius <br />
<input type="radio" name="unit" value="fahrenheit" onclick="conversion('f')"> Fahrenheit <br />

<p id=out> </p>

<script>
function conversion(param) {
  temperature = document.getElementById("temperature").value;
  if(param=="f"){
    sonuc=(temperature-32)/1.8;
  }
  if(param=="c"){
    sonuc=(1.8*temperature)+32;
  }
  document.getElementById("out").innerHTML=sonuc
}
</script>

